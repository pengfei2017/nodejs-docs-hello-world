FROM jenkinsci/blueocean:latest
USER root
# usermod命令在shadow中
RUN apk add --update shadow && usermod -aG docker jenkins
USER jenkins


FROM jenkinsci/blueocean:latest
USER root
RUN apk add sudo && apk add --update shadow && usermod -aG docker jenkins
USER jenkins


FROM alpine:3.3
COPY sudoers /etc/
RUN apk update && \
    apk add sudo && \
    adduser -u 1000 -G wheel -D alpine && \
    rm -rf /var/cache/apk/*
USER alpine

FROM jenkinsci/blueocean:latest
ADD https://get.docker.com/builds/Linux/x86_64/docker-1.12.2.tgz .
RUN tar -xzf docker-1.12.2.tgz
RUN cp docker/docker /usr/bin/

#这个有效
https://wiki.jenkins.io/display/JENKINS/Docker+Plugin
