FROM jenkinsci/blueocean:latest
USER root
# usermod命令在shadow中
RUN apk add --update shadow && usermod -aG docker jenkins
USER jenkins


FROM jenkinsci/blueocean:latest
USER root
RUN apk add sudo && apk add --update shadow && usermod -aG docker jenkins
USER jenkins


FROM alpine:3.3
COPY sudoers /etc/
RUN apk update && \
    apk add sudo && \
    adduser -u 1000 -G wheel -D alpine && \
    rm -rf /var/cache/apk/*
USER alpine
